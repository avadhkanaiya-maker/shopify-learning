{% comment %}
  Interactive Feature Timeline Section
{% endcomment %}

<section
  class="timeline-section"
  style="background-color: {{ section.settings.bg_color }}; text-align: {{ section.settings.text_align }};"
>
  <div class="page-width">

    {% if section.settings.heading != blank %}
      <h2 class="timeline-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.subheading != blank %}
      <p class="timeline-subheading">{{ section.settings.subheading }}</p>
    {% endif %}

    <div class="timeline-wrapper">
      {% for block in section.blocks %}
        <div
          class="timeline-item {% if block.settings.highlight %}is-highlighted{% endif %}"
          {{ block.shopify_attributes }}
        >
          {% if section.settings.show_icons and block.settings.icon != blank %}
            <div class="timeline-icon">
              <img
                src="{{ block.settings.icon | image_url: width: 80 }}"
                alt=""
              >
            </div>
          {% endif %}

          <div class="timeline-content">
            <span class="timeline-step">
              Step {{ forloop.index }}
            </span>

            {% if block.settings.title != blank %}
              <h3>{{ block.settings.title }}</h3>
            {% endif %}

            {% if block.settings.description != blank %}
              <p>{{ block.settings.description }}</p>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>

  </div>
</section>

<style>
.timeline-section {
  padding: 80px 0;
}

.timeline-heading {
  font-size: 36px;
  margin-bottom: 10px;
}

.timeline-subheading {
  font-size: 18px;
  margin-bottom: 50px;
  color: #666;
}

.timeline-wrapper {
  display: flex;
  flex-direction: column;
  gap: 30px;
}

.timeline-item {
  display: flex;
  gap: 20px;
  padding: 25px;
  border-radius: 10px;
  background: #ffffff;
  box-shadow: 0 4px 20px rgba(0,0,0,0.05);
}

.timeline-item.is-highlighted {
  border: 2px solid #000;
  transform: scale(1.02);
}

.timeline-icon img {
  width: 60px;
  height: auto;
}

.timeline-step {
  font-size: 14px;
  font-weight: 600;
  color: #999;
  display: block;
  margin-bottom: 5px;
}

.timeline-content h3 {
  font-size: 22px;
  margin-bottom: 8px;
}

.timeline-content p {
  font-size: 16px;
  color: #555;
}

@media (max-width: 768px) {
  .timeline-item {
    flex-direction: column;
    text-align: center;
  }
}
</style>

{% schema %}
{
  "name": "Feature Timeline",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Our Journey"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "From idea to launch â€” how we build things"
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Text alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ],
      "default": "center"
    },
    {
      "type": "checkbox",
      "id": "show_icons",
      "label": "Show icons",
      "default": true
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#f7f7f7"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Timeline",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Step title",
          "default": "Step title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Describe this step in your journey."
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon / Image"
        },
        {
          "type": "checkbox",
          "id": "highlight",
          "label": "Highlight this step",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Feature Timeline",
      "category": "Custom"
    }
  ]
}
{% endschema %}
