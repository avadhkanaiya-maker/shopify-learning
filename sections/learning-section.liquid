{% comment %}
  Learning Section Example
{% endcomment %}

<div class="learning-section" style="background-color: {{ section.settings.bg_color }};">
  <div class="page-width">
    <h2>{{ section.settings.heading }}</h2>

    {% if section.settings.show_text %}
      <p>{{ section.settings.description }}</p>
    {% endif %}

    {% if section.settings.image != blank %}
      <img
        src="{{ section.settings.image | image_url: width: 300 }}"
        alt="Learning Image"
      >
    {% endif %}

    {% if section.settings.button_label != blank or section.settings.show_btn %}
      <a
        href="{{ section.settings.button_link }}"
        class="learning-btn"
      >
        {{ section.settings.button_label | default: 'Click Here'}}
      </a>
    {% endif %}
  </div>
</div>

<style>
.learning-section {
  padding: 60px 0;
  text-align: center;
}

.learning-section h2 {
  font-size: 32px;
  margin-bottom: 10px;
}

.learning-section p {
  font-size: 16px;
  margin-bottom: 20px;
}

.learning-btn {
  display: inline-block;
  padding: 12px 24px;
  background: #000;
  color: #fff;
  text-decoration: none;
  border-radius: 4px;
}
</style>

{% schema %}
{
  "name": "Learning Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to My Learning Section"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "This is a simple Shopify section for learning purposes."
    },
    {
      "type": "checkbox",
      "id": "show_text",
      "label": "Show description text",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_btn",
      "label": "Show Button",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#aaaaaa"
    }
  ],
  "presets": [
    {
      "name": "Learning Section",
      "category": "Collections"
    }
  ]
}
{% endschema %}
